{% extends 'base.html.twig' %}

{% block title %}Hello CompaniesController!{% endblock %}

{% block body %}
<main class="container">
	<table class="table table-hover">
		<form method="post" action="{{ path('app_companies_add') }}">
			<button type="submit" class="btn btn-primary">Ajouter une companie</button>
		</form>
		
			{% if companies is not empty %}
			{% for companie in companies %}
			<tbody>
				<td>
					{{companie.companieNom}}
				</td>
				<td>
					<div class="button">
						<form method="post" action="{{ path('app_companies_delete', {'id': companie.id}) }}">
							<button type="submit" class="btn btn-danger">Supprimer</button>
						</form>

						<form method="post" action="{{ path('app_companies_edit', {'id': companie.id}) }}">
							<button type="submit" class="btn btn-secondary">Modifier</button>
						</form>
					</div>
				</td>
			</tbody>
			{% endfor %}
			{% else %}
			<p>Aucune companies trouv√©.</p>
			{% endif %}
	</table>
</main>
{% endblock %}